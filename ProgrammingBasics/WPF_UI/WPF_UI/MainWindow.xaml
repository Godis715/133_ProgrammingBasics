<Window x:Class="WPF_UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    
                    
                    <Button Grid.Column="0" Height="25" Content="Script" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="1"/>
                    <Button Grid.Column="1" Height="25" Content="Save" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="1"/>
                    <Button Grid.Column="2" Height="25" Content="Download" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="1"/>
                    <Button Grid.Column="3" Height="25" Content="Undo" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="1"/>
                    <Button Grid.Column="4" Height="25" Content="Redo" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="1"/>
                </Grid>
                <TabControl Grid.Row="1">
                    <TabItem Header="DrawingModes" Margin="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0"  Height="25" Content="Default" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="1"/>
                            <Button Grid.Column="1"  Height="25" Content="Symmetrical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="1"/>
                            <Button Grid.Column="2"  Height="25" Content="Rotation" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="1"/>
                        </Grid>
                        
                    </TabItem>
                    <TabItem Header="Object" Margin="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0"  Height="25" Content="Point" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="1"/>
                            <Button Grid.Column="1"  Height="25" Content="Segment" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="1"/>
                            <Button Grid.Column="2"  Height="25" Content="Star" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="1"/>
                            <Button Grid.Column="3"  Height="25" Content="Broken" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="1"/>
                            <Button Grid.Column="4"  Height="25" Content="Ark" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="1"/>
                            <Button Grid.Column="5"  Height="25" Content="Circle" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="1"/>
                            <Button Grid.Column="6"  Height="25" Content="Curve" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="1"/>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Redaction" Margin="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0"  Height="25" Content="Move" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="1"/>
                            <Button Grid.Column="1"  Height="25" Content="Scale" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="1"/>
                            <Button Grid.Column="2"  Height="25" Content="Rotate" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="1"/>
                            <Button Grid.Column="3"  Height="25" Content="Delete" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="1"/>
                            <Button Grid.Column="4"  Height="25" Content="Delete All" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="1"/>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Requirement" Margin="1">
                        <Button  Height="25" Content="idk" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    </TabItem>
                    <TabItem Header="FastTool" Margin="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0"  Height="25" Content="Points Distance" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="1"/>
                            <Button Grid.Column="1"  Height="25" Content="Merge Points" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="1"/>
                        </Grid>
                    </TabItem>



                </TabControl>
                
                
            </Grid>
            <Canvas Grid.Row="1" HorizontalAlignment="Left" Height="600"  VerticalAlignment="Top" Width="900"/>
        </Grid>
        

    </Grid>
</Window>
