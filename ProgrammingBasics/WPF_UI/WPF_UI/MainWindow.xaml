<Window x:Class="WPF_UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280"
        MinHeight="720" MinWidth="1280">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Menu Grid.Row="0" Height="25" VerticalAlignment="Top">
                    <MenuItem Header="File">
                        <MenuItem Header="New Project">
                            <MenuItem.Icon>
                                <Image Source="Resources/iconFile.ico" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem  Header="Save Project" />
                        <MenuItem Header="Open Project">
                            <MenuItem.Icon>
                                <Image Source="Resources/iconFile.ico" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="Add Project" />
                        <Separator />
                        <MenuItem Header="Run Script" />
                    </MenuItem>
                    <MenuItem Header="View" >
                        <MenuItem Header="Dark" />
                        <MenuItem Header="Light" />
                        <MenuItem Header="Neutral" />
                        <MenuItem Header="Gradient" />
                        <Separator />
                        <MenuItem Header="More..." />
                    </MenuItem>
                    <MenuItem Header="Info">
                        <MenuItem Header="Help"/>
                        <Separator/>
                        <MenuItem Header="About..."/>
                    </MenuItem>

                </Menu>
                <ToolBar Grid.Row="1">
                    <Button Content="Undo" Margin="2" Click="Button_Undo_Click"/>
                    <Button Content="Redo" Margin="2" Click="Button_Redo_Click"/>
                    <Separator/>
                    <ComboBox x:Name="DrawMode">
                        <ComboBoxItem IsSelected="True">
                            <Label Content="Default"/>
                        </ComboBoxItem>
                        <StackPanel>
                            <Label Content="Rotation"/>
                        </StackPanel>
                        <StackPanel>
                            <Label Content="Symmetrical"/>
                        </StackPanel>
                    </ComboBox>
                    <ComboBox x:Name="Rot_Sym_Conf">
                        <ComboBoxItem IsSelected="True">
                            <Label Content="--"/>
                        </ComboBoxItem>
                        <StackPanel>
                            <Label Content="x2"/>
                        </StackPanel>
                        <StackPanel>
                            <Label Content="x4"/>
                        </StackPanel>
                        <StackPanel>
                            <Label Content="x8"/>
                        </StackPanel>
                    </ComboBox>
                    <Separator/>
                    <RadioButton Content="Point" Margin="1" />
                    <RadioButton Content="Segment" Margin="0,4" VerticalAlignment="Stretch" />
                    <RadioButton Content="Star" Margin="1" />
                    <RadioButton Content="Broken" Margin="1" />
                    <RadioButton Content="Circle" Margin="1" />
                    <RadioButton Content="Arc" Margin="1" />
                    <RadioButton Content="Curve" Margin="1" />
                    <Separator/>
                    <Button>
                        <Menu>
                            <MenuItem x:Name="Reqs" Header="Requirments" />
                        </Menu>
                    </Button>
                    <Separator/>
                    <Button Content="___show params" Click="Button_showParams_Click"/>
                    <Button Content="___show reqs" Click="Button_showReqs_Click"/>
                </ToolBar>


            </Grid>
            <Canvas Grid.Row="1" HorizontalAlignment="Left" Height="600"  VerticalAlignment="Top" Width="900"/>
        </Grid>
        
        <!-->Test Grid</!-->
            <Grid x:Name="test" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition x:Name="ParamsRow" Height="auto"/>
                <RowDefinition x:Name="ReqsRow" Height="auto"/>
            </Grid.RowDefinitions>
            <DataGrid x:Name="datagr" Grid.Row="0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" Width="100"/>
                    <DataGridTextColumn Header="Value" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>
